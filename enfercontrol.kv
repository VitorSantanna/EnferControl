<TelaConsulta>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'background.jpg'
    lblNome:lblNome
    lblTitulo:lblTitulo
    lblTurma:lblTurma
    lblInicio:lblInicio
    lblTermino:lblTermino
    lblLocal:lblLocal
    lblSetor:lblSetor
    lblHorario:lblHorario
    lblRelatorio:lblRelatorio
    StackLayout:
        spacing:[30, 2]
        orientation:"tb-lr"
        SuperLabel:
            text:"Nome:"
        SuperLabel:
            text:"Titulo:"
        SuperLabel:
            text:"Turma:"
        SuperLabel:
            text:"Local:"
        SuperLabel:
            text: "Data de Inicio"
        EditableLabel:
            id:lblNome
            text:""
        EditableLabel
            id:lblTitulo
            text:""
        EditableLabel
            id:lblTurma
            text:""
        EditableLabel
            id:lblLocal
            text:""
        EditableLabel
            id:lblInicio
            text:""
        SuperLabel:
            text:"Data de Termino:"
        SuperLabel:
            text:"Setor:"
        SuperLabel:
            text:"Horas Efetuadas:"
        SuperLabel:
            text:"Atividades Observadas:"
        SuperLabel:
        EditableLabel:
            id:lblTermino
            text:""
        EditableLabel:
            id:lblSetor
            text:""
        EditableLabel:
            id:lblHorario
            text:""
        EditableLabel:
            id:lblRelatorio
            text:""
    FloatLayout
        Button:
            size_hint:None, None
            width:200
            height:100
            pos_hint:{'x':.45, 'y':0}
            text:"Retornar a Tela Inicial"
            on_release: root.manager.current = 'EnferControl'
        Button:
            size_hint:None, None
            width:250
            height:100
            pos_hint:{'x':.70, 'y':0}
            text:"Imprimir Relatório"
            on_release: root.click()
<SuperLabel@Label>:
    text:''
    font_size: "15sp"
    size_hint: .2, .2
    color:200, 0, 0, 1
<EditableLabel@Label>:
    text:''
    font_size: "15sp"
    size_hint: .2, .2
    color:400, 0, 400, 1







		



