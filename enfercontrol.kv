#:import random random.random

<TelaPrincipal>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.jpg'
    BoxLayout:
        size_hint: .3, .1
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: 'vertical'
        Button:
            text: "Cadastrar Relatório"
            on_release: root.manager.current = 'Tela de Cadastro'
            markup: 1
        Button:
            text: "Em Breve"
            disabled:1
        Button:
            text: "Em Breve"
            disabled:1
        Button:
            text: "Em Breve"
            disabled:1

